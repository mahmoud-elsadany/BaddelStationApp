<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:rsv="http://schemas.android.com/apk/res-auto"
    android:background="@color/baddelGray"
    android:layout_height="match_parent"
    tools:context="baddel.baddelstationapp.chooseRentTimeActivity">

    <!--<com.github.channguyen.rsv.RangeSliderView-->
        <!--android:id="@+id/rangeSliderView"-->
        <!--rsv:filledColor="@color/baddelGreen"-->
        <!--rsv:rangeCount="21"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="100dp"-->
        <!--android:layout_marginLeft="30dp"-->
        <!--android:layout_marginRight="30dp"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_above="@+id/countingTimeTV" />-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chooseTimeLayout"
        android:layout_below="@+id/chooseRentTimeTittleTV"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/numberOfBikesLayout"
        android:layout_above="@+id/timeDetailsLayout"
        android:layout_alignStart="@+id/chooseRentTimeHelpBT">

        <baddel.baddelstationapp.customViews.CircularSeekBar
            android:id="@+id/circularSeekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:start_angle="270"
            app:end_angle="270"
            app:circle_x_radius="200dp"
            app:circle_y_radius="200dp"
            app:progress="1"
            app:max="20"
            app:circle_stroke_width="30dp"
            app:circle_progress_color="@color/baddelGreen"
            app:pointer_color="@color/baddelGreen"
            app:pointer_halo_color="@color/baddelGreen"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_above="@+id/textView6" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="450 min"
            android:textColor="@color/baddelGreen"
            android:textSize="30dp"
            android:layout_marginEnd="71dp"
            android:layout_alignBaseline="@+id/sliderCounterTV"
            android:layout_alignBottom="@+id/sliderCounterTV"
            android:layout_toStartOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300 min"
            android:textColor="@color/baddelGreen"
            android:textSize="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 min"
            android:textColor="@color/baddelGreen"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/sliderCounterTV" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150 min"
            android:textSize="30dp"
            android:textColor="@color/baddelGreen"
            android:layout_marginStart="80dp"
            android:layout_alignBaseline="@+id/sliderCounterTV"
            android:layout_alignBottom="@+id/sliderCounterTV"
            android:layout_toEndOf="@+id/textView6" />

        <TextView
            android:id="@+id/sliderCounterTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 min"
            android:textColor="@color/colorAccent"
            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/baddelheader"
        android:gravity="center"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/headerImageWidth"
            android:layout_height="@dimen/headerImageHeight"
            android:src="@drawable/baddelogobrandname" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="@color/baddelGreen"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2-choose Your Time: "
        android:id="@+id/chooseRentTimeTittleTV"
        android:layout_below="@+id/linearLayout"
        android:layout_alignStart="@+id/chooseTimeLayout"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1-choose Number of bikes"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/baddelGreen"
        android:textSize="30dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/chooseRentTimeNextBT"
        android:layout_width="@dimen/footerButtonWidth"
        android:layout_height="@dimen/footerButtonHeight"
        android:textColor="@color/baddelFontColor"
        android:background="@drawable/buttonshape"
        android:text="@string/enterPhoneNumberNextSTR"
        android:padding="20dp"
        android:textSize="40dp"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="35dp"
        android:layout_alignBaseline="@+id/chooseRentTimeCancelBT"
        android:layout_alignBottom="@+id/chooseRentTimeCancelBT"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/chooseRentTimeCancelBT"
        android:layout_width="@dimen/footerButtonWidth"
        android:layout_height="@dimen/footerButtonHeight"
        android:text="@string/enterPhoneNumberCancelSTR"
        android:textColor="@color/baddelFontColor"
        android:background="@drawable/buttonshape"
        android:padding="20dp"
        android:textSize="40dp"
        android:layout_marginLeft="63dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView7"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="24dp" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:id="@+id/timeDetailsLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/chooseRentTimeNextBT">

        <TextView
            android:id="@+id/countingTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="40dp"
            android:textColor="@color/baddelFontColor"
            android:text="@string/countingTimeTVSTR"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/rentingDetailsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="40dp"
            android:textColor="@color/baddelGreen"
            android:text="reserve 1 bike for 30 min costs 25 egp"
            android:layout_below="@+id/countingTimeTV"
            android:layout_alignParentStart="true" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/numberOfBikesLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/chooseRentTimeCancelBT">
        <NumberPicker
            android:theme="@style/AppTheme.Picker"
            android:id="@+id/numberOfBikesNP"
            android:textAlignment="center"
            android:descendantFocusability="blocksDescendants"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/numberOfBikesTV" />

        <TextView
            android:id="@+id/numberOfBikesTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number Of Bikes : 1"
            android:textSize="30dp"
            android:textColor="@color/baddelGreen"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <Button
        android:id="@+id/chooseRentTimeHelpBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="26dp"
        android:background="@color/baddelGreen"
        android:padding="10dp"
        android:text="@string/helpBTSTR"
        android:textColor="@color/baddelFontColor"
        android:layout_below="@+id/timeDetailsLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />


</RelativeLayout>
