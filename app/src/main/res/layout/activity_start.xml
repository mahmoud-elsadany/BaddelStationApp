<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="3"
    tools:context="baddel.baddelstationapp.startActivity">

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/imageSlider"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/baddelGray"
        android:clickable="false">

    </com.daimajia.slider.library.SliderLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/baddelGray">

        <Button
            android:id="@+id/rentBicycleBT"
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/rentlayouttime"
            android:drawableLeft="@drawable/bikeicon"
            android:padding="20dp"
            android:text="@string/rentBicycleBTSTR"
            android:textColor="@color/baddelFontColor"
            android:textSize="@dimen/textUI" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@+id/rentBicycleBT"
            android:layout_alignEnd="@+id/rentBicycleBT"
            android:layout_alignLeft="@+id/rentBicycleBT"
            android:layout_alignRight="@+id/rentBicycleBT"
            android:layout_alignStart="@+id/rentBicycleBT"
            android:layout_marginBottom="90dp"
            android:src="@drawable/baddelogobrandname" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rentBicycleBT"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="107dp"
            android:text="HelloRemoteUpdate"
            android:textColor="@color/baddelFontColor"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/needHelpSTR"
            android:textColor="@color/baddelGreen"
            android:textSize="30dp"
            android:layout_above="@+id/textView6SupportNumber"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="48dp"
            android:text="version 2"
            android:textColor="@color/baddelGreen" />

        <TextView
            android:id="@+id/textView6SupportNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="01288662741"
            android:textColor="@color/baddelGreen"
            android:layout_above="@+id/textView5"
            android:layout_centerHorizontal="true" />

        <!--<Button-->
        <!--android:id="@+id/downloadBT"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_above="@+id/helpBT"-->
        <!--android:layout_alignEnd="@+id/helpBT"-->
        <!--android:layout_marginBottom="90dp"-->
        <!--android:text="downloadAndInstall" />-->


    </RelativeLayout>

</LinearLayout>
