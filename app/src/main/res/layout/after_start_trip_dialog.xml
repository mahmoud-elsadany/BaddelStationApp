<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/dialogshape"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/afterStartTripDialogTittleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:text="Baddel"
        android:padding="20dp"
        android:drawablePadding="15dp"
        android:drawableLeft="@drawable/leftsmsdrawable"
        android:gravity="center"
        android:textColor="@color/baddelGreen" />

    <TextView
        android:id="@+id/afterStartTripSlotsNumbersTV"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="heee"
        android:lines="3"
        android:textColor="@color/baddelFontColor"
        />

    <Button
        android:id="@+id/afterStartTripSlotNumbersSubmitBT"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ok"/>

</LinearLayout>